{
    "name": "shine-web",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "mkcert": "cd certificates && mkcert create-ca && mkcert create-cert --domains local.scytta.com",
        "env:mock": "pnpm dlx msw init && tsx scripts/select-config.ts mock",
        "env:local": "tsx scripts/select-config.ts local",
        "env:dev": "tsx scripts/select-config.ts dev",
        "env:prod": "tsx scripts/select-config.ts prod",
        "dev": "vite dev",
        "build": "vite build",
        "build:svgParser": "pnpm dlx peggy -c src/components/atoms/svg/peggy.config.js && node scripts/fix-parser.js",
        "build:assets": "cd ../shine-assets && pnpm run convert:web:ui --out=../shine-web/static-generated/assets",
        "build:css": "pnpm dlx @tailwindcss/cli -i ./src/app.css -o ./temp/app.css",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "test:unit": "vitest",
        "test": "pnpm run test:unit -- --run && pnpm run test:e2e",
        "test:e2e": "playwright test",
        "storybook": "storybook dev -p 6006",
        "build:storybook": "storybook build"
    },
    "dependencies": {
        "bits-ui": "^2.14.4",
        "clsx": "^2.1.1",
        "debug": "^4.4.3",
        "prune": "^0.0.2",
        "sveltekit-i18n": "^2.4.2",
        "tailwind-merge": "^3.4.0",
        "uuid": "^13.0.0",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.0",
        "@eslint/js": "^9.39.1",
        "@playwright/test": "^1.57.0",
        "@storybook/addon-svelte-csf": "^5.0.10",
        "@storybook/addon-vitest": "^10.1.4",
        "@storybook/sveltekit": "^10.1.4",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/adapter-cloudflare": "^7.2.4",
        "@sveltejs/kit": "^2.49.1",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.17",
        "@trivago/prettier-plugin-sort-imports": "^6.0.0",
        "@types/debug": "^4.1.12",
        "@types/node": "^22.19.1",
        "@vitest/browser-playwright": "^4.0.15",
        "@vitest/coverage-v8": "^4.0.15",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-storybook": "^10.1.4",
        "eslint-plugin-svelte": "^3.13.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "mkcert": "^3.2.0",
        "msw": "^2.12.4",
        "playwright": "^1.57.0",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "storybook": "^10.1.4",
        "svelte": "^5.45.5",
        "svelte-check": "^4.3.4",
        "tailwindcss": "^4.1.17",
        "tsx": "^4.21.0",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1",
        "vite": "^7.2.6",
        "vite-plugin-static-copy": "^3.1.4",
        "vitest": "^4.0.15",
        "vitest-browser-svelte": "^2.0.1"
    },
    "msw": {
        "workerDirectory": [
            "static-generated"
        ]
    }
}
