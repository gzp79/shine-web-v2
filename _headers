  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: no-referrer
  Permissions-Policy: document-domain=()
  Content-Security-Policy: worker-src 'none'; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval' blob: challenges.cloudflare.com static.cloudflareinsights.com; frame-ancestors 'none';

# notes on security policy
#   script-src:
#     unsafe-inline - required for inline js scripts and on* event handlers
#     wasm-unsafe-eval - required for wasm compilation
#     blob: - required to load game binding scripts as new instances

/static/*
  Cache-Control: public, immutable, max-age=31536000
  ! Content-Security-Policy
  ! Permissions-Policy

# to be removed into some large file storage
/assets/*
  Cache-Control: public, immutable, max-age=31536000
  ! Content-Security-Policy
  ! Permissions-Policy  

